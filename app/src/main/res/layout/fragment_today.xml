<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/illustration02"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_today_timeUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_today_timeUpdate">

        <TextView
            android:id="@+id/fragment_today_temperature"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/fragment_today_feelsLike"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_today_temperature"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="feels like 10"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/fragment_today_temperature"
            android:includeFontPadding="false"
            android:text="Â°C"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform" />


        <ImageView
            android:id="@+id/fragment_today_sunImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

</RelativeLayout>